    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>                
            </Grid.RowDefinitions>
            <controls:Exercise x:Name="ExControl" Foreground="{StaticResource MenuItemColor}" Grid.Row="0" Grid.RowSpan="3">
            
        </controls:Exercise>
        
            <toolkit:LongListMultiSelector
                    x:Name="MultipleChoiceAnswerInput"
                    VerticalAlignment="Top"
                    Height="200"
                    Visibility="Visible"
                    ItemsSource="{Binding UserChoices}"
                    LayoutMode="List"
                    IsSelectionEnabled="True"
                    Grid.Row="1">
                <toolkit:LongListMultiSelector.ItemTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="Choice"
                                   Foreground="{StaticResource MenuItemColor}"
                                   Text="{Binding}" 
                                   TextWrapping="Wrap"
                                   FontSize="30"/>
                    </DataTemplate>
                </toolkit:LongListMultiSelector.ItemTemplate>
            </toolkit:LongListMultiSelector>
        </Grid>
    </ScrollViewer>
</phone:PhoneApplicationPage>