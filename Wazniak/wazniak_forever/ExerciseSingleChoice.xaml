    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!--LayoutRoot is the root grid where all page content is placed-->
        <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <controls:Exercise x:Name="ExControl" Foreground="{StaticResource MenuItemColor}" Grid.Row="0" Grid.RowSpan="3">

            </controls:Exercise>

            <toolkit:LongListSelector
                    x:Name="SingleChoiceAnswerInput"
                    VerticalAlignment="Top"
                    Height="200"
                    Visibility="Visible"
                    ItemsSource="{Binding UserChoices}"
                    IsEnabled="True"
                    LayoutMode="List"
                    Grid.Row="1">
                <toolkit:LongListSelector.ItemTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="Choice"
                                   Foreground="{StaticResource MenuItemColor}"
                                   Text="{Binding}" 
                                   TextWrapping="Wrap"
                                   FontSize="30"/>
                    </DataTemplate>
                </toolkit:LongListSelector.ItemTemplate>
            </toolkit:LongListSelector>
        </Grid>
    </ScrollViewer>
</phone:PhoneApplicationPage>