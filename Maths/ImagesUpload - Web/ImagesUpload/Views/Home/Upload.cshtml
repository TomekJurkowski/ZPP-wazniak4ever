
@{
    ViewBag.Title = "Upload";
}

<script>
    function deleteImage(item) {
        var url = "/Home/DeleteImage";
        $.post(url, { name: item }, function(data) {
            window.location.href = "/Home/Upload";
            alert(data);
        });
    }
</script>

