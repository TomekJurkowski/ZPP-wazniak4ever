@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <title>Home Frame - My ASP.NET Application</title>
        
        <link rel="stylesheet" href="~/Content/onepage-scroll.css" />
        <link rel="stylesheet" href="~/Content/main-min.css" />
        
        <script src="~/Scripts/HomeFrameScripts/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    </head>    

    <body>
        
        <div class="main">
            <section class="home">
                <div class="container">

                    <div class="home-phone hide hidden-xs col-xs-12 col-sm-5">
                        <img src="img/iphone-3.png" class="iphone-3 " alt="">
                    </div>

                    <div class="row">

                        <div class="home-copy  col-xs-12 col-sm-8 col-sm-offset-2 animated fadeInDown delay-2 ">
                            <h1 class="demo1">We love<br> <span class="rotate"> Imagination, Technology, Creativity, Innovation, Big Dreams </span></h1>

                            <p>We've been hard at work hand crafting amazing products for your team. We would like to share our recent work, hope you like it.</p>

                            <span class="take-a-look animated fadeInDown delay-8"><i class="entypo-down-open"></i>Take a look</span>
                        </div>
                    </div>

                </div>
            </section>
            
            <section class="slide-1 slide full-color">
                <div class="container">
                    <div class="row">

                        <div class="col-xs-12 col-sm-6 iphone-container ">
                            <img src="img/iphone-1.png" class="hide iphone-1" alt="">
                        </div>

                        <div class="col-xs-12 col-sm-4 copy">
                            <h2 class=" hide slide-1-title slide-titles">  Finally it's Launch day </h2>
                            <p class="slide-1-1 hide">
                                Use showcase to present your latest work in an elgantly simple way. Present multiple screenshots with copy to keep things flowing.
                            </p>

                            <p class="slide-1-2 hide hidden-xs">
                                You can easily add more slides and change the animation speed, style.
                            </p>

                            <p class="slide-1-3 hide hidden-xs">
                                Mix it up and use the background image, flat colours or even big video.
                            </p>
                            <i class="hide entypo-down-open slide-1-scroll scroll-down"></i>
                        </div>
                    </div>
                </div>
            </section>

            <section class="home">
                <div class="container">

                    <br />
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Clarifier Web Application</p>
                    </footer>

                    
                </div>
            </section>
        </div>
        
        
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>

        <script src="~/Scripts/HomeFrameScripts/bootstrap.min.js"></script>
        <script src="~/Scripts/HomeFrameScripts/jquery-ui-1.8.22.custom.min.js"></script>
        <script src="~/Scripts/HomeFrameScripts/jquery.imagesloaded.min.js"></script>
        <script src="http://vjs.zencdn.net/4.0/video.js"></script>
        <script src="~/Scripts/HomeFrameScripts/bigvideo.js"></script>
        <script src="~/Scripts/HomeFrameScripts/jquery.simple-text-rotator.min.js"></script>
        <script src="~/Scripts/HomeFrameScripts/jquery.onepage-scroll.min.js"></script>
        <script src="~/Scripts/HomeFrameScripts/main-min.js"></script>
    </body>


</html>