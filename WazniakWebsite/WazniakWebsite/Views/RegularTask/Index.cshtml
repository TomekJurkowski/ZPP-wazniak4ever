@model IEnumerable<WazniakWebsite.Models.RegularTask>

@{
    ViewBag.Title = "Index";
}

<h2 class="PurpleText">Regular tasks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped lightPurpleBackground">
    <tr class="PurpleText">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <span class="shortDisplay">
                    @Html.DisplayFor(modelItem => item.Text)
                </span>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "PurpleText" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "PurpleText" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "PurpleText" })
            </td>
        </tr>
    }

</table>
