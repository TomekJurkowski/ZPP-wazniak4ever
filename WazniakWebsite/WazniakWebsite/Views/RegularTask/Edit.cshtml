@model WazniakWebsite.Models.RegularTask

@{
    ViewBag.Title = "Edit";
}

<h2 class="PurpleText">Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="PurpleText">Change the content of an exercise</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2 PurpleText" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control text-box" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2 PurpleText" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control text-box" })
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn PurpleBtn" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Subject Page", "Details", "Subject", new { id = Model.SubjectID }, new { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
