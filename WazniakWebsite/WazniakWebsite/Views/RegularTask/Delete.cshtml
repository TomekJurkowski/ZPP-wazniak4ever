@model WazniakWebsite.Models.RegularTask

@{
    ViewBag.Title = "Delete";
}

<h2 class="PurpleText">Delete</h2>

<h3 class="PurpleText">Are you sure you want to delete this exercise?</h3>

<hr />
<div class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2 PurpleText" })
        <div class="col-md-10">
            <div class="alert lightPurpleBackground text-center">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2 PurpleText" })
        <div class="col-md-10">
            <div class="alert lightPurpleBackground">
                @Html.DisplayFor(model => model.Text)
            </div>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn PurpleBtn" />
            </div>
        </div>
    </div>
}

<hr />
<div>
    @Html.ActionLink("Back to Subject Page", "Details", "Subject", new { id = Model.SubjectID }, new { })
</div>