@model WazniakWebsite.Models.Subject

@{
    ViewBag.Title = "Delete";
}

@section HeadScripts
{
    <script type="text/javascript">
        $(function () {
            $("#tooltipDelete").tooltip({
                animated: 'fade',
                placement: 'top'
            });
        });
    </script>
}

<h2 class="PurpleText">Delete</h2>
<p class="field-validation-error">@ViewBag.ErrorMessage</p>
<h3 class="PurpleText">Are you sure you want to delete this subject?</h3>

<hr />
<div class="form-horizontal">
    <div class="form-group">
        <label class="myLabel control-label col-md-2 PurpleText">Subject</label>
        <div class="col-md-10">
            <div class="alert">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label class="myLabel control-label col-md-2 PurpleText">Description</label>
        <div class="col-md-10">
            <div class="alert">
                <b>@Html.DisplayFor(model => model.Description)</b>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastUpdated, new { @class = "myLabel control-label col-md-2 PurpleText" })
        <div class="col-md-10">
            <div class="alert">
                <b>@Html.DisplayFor(model => model.LastUpdated)</b>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <label class="myLabel control-label col-md-2 PurpleText">Task Amount</label>
        <div class="col-md-10">
            <div class="alert">
                <b>@Html.DisplayFor(model => model.Tasks.Count)</b>
            </div>
        </div>
    </div>

</div>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="tooltipDelete" type="button" value="Delete" class="btn PurpleBtn" data-toggle="modal" data-target="#deleteModal" title="This action is irreversible!" />
        </div>
    </div>
</div>

<hr />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<!-- deleteModal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title PurpleText" id="myModalLabel">Are you absolutely sure?</h3>
            </div>
            <div class="modal-body">
                <h3 class="PurpleText" id="prompt">All data about this Subject (including every exercise pinned to it) will be lost.</h3>
                
                <br />
                <br />

                <h4 class="PurpleText" id="prompt">Remember that this action CANNOT be reverted!</h4>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    <button type="button" class="btn btn-default" data-dismiss="modal">Dismiss</button>
                    
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn PurpleBtn" />
                }
            </div>
        </div>
    </div>
</div>
